{
  "expo": {
    "name": "Ahoy",
    "slug": "ahoyapp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "scheme": "ahoyapp",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#E85D3B"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ahoyapp.app",
      "associatedDomains": ["applinks:ahoy.bdot.house"]
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#E85D3B"
      },
      "package": "com.ahoyapp.app",
      "edgeToEdgeEnabled": true,
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "ahoy.bdot.house",
              "pathPrefix": "/auth"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Ahoy to access your camera for capturing receipts."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Ahoy to access your photos for selecting receipts."
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Allow Ahoy to access your location for tagging expenses."
        }
      ],
      "expo-mail-composer"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
